---
import { boardMembers } from "../../data/boardMembers";
boardMembers.sort((a, b) => a.index - b.index);
---

<div class="max-w-7xl mx-auto px-4">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      boardMembers.map((member) => (
        <div class="relative animate-on-scroll">
          <div class="bg-white overflow-hidden shadow-md rounded-md transition-all duration-300 hover:shadow-xl">
            <div class="px-8 pt-8 pb-6 relative">
              <div class="mb-5">
                <h3 class="text-xl font-serif font-medium text-gray-900">
                  {member.name}
                </h3>
                {Array.isArray(member.role) ? (
                  <ul class="mt-1 space-y-1">
                    {member.role.map((r) => (
                      <li class="text-teal-600 font-sans text-sm tracking-wide">
                        {r}
                      </li>
                    ))}
                  </ul>
                ) : (
                  <p class="text-teal-600 font-sans text-sm mt-1 tracking-wide">
                    {member.role}
                  </p>
                )}
              </div>

              <div class="flex flex-col space-y-4 border-t border-gray-100 pt-5">
                {member.email && (
                  <a href={`mailto:${member.email}`} class="group">
                    <div class="flex items-center text-gray-500 group-hover:text-teal-600 transition-colors duration-200">
                      <div class="w-8 h-8 rounded-full bg-gray-50 flex items-center justify-center mr-3 group-hover:bg-teal-50 transition-colors">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-4 w-4 text-gray-400 group-hover:text-teal-500"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                          />
                        </svg>
                      </div>
                      <span class="text-sm font-medium">{member.email}</span>
                    </div>
                  </a>
                )}

                {member.phone && (
                  <a
                    href={`tel:${member.phone.replace(/\s/g, "")}`}
                    class="group"
                  >
                    <div class="flex items-center text-gray-500 group-hover:text-teal-600 transition-colors duration-200">
                      <div class="w-8 h-8 rounded-full bg-gray-50 flex items-center justify-center mr-3 group-hover:bg-teal-50 transition-colors">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-4 w-4 text-gray-400 group-hover:text-teal-500"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                          />
                        </svg>
                      </div>
                      <span class="text-sm font-medium">{member.phone}</span>
                    </div>
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
