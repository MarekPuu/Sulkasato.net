---
export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title,
  subtitle,
  ctaText,
  ctaLink,
  secondaryCtaText,
  secondaryCtaLink,
} = Astro.props;
---

<div class="bg-[var(--color-primary)] text-white py-16">
  <div class="container mx-auto px-4">
    <h1
      class="font-heading text-4xl md:text-5xl font-bold mb-4 animate-on-scroll"
    >
      {title}
    </h1>
    {
      subtitle && (
        <p class="text-xl md:text-2xl text-gray-100 animate-on-scroll">
          {subtitle}
        </p>
      )
    }
  </div>
</div>
