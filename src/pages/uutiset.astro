---
import PageHero from "../components/common/PageHero.astro";
import Layout from "../layouts/Layout.astro";
import NewsFeed from "../components/newsPage/NewsFeed.astro";
import NewsFeedSkeleton from "../components/newsPage/NewsFeed.Skeleton.astro";
---

<Layout
  title="Uutiset"
  description="Lue viimeisimmät uutiset, tapahtumat ja tiedotteet Sulkasato Iisalmi ry:ltä. Pysy ajan tasalla seuran toiminnasta, pelivuoroista ja kilpailuista."
>
  <PageHero title="Uutiset" subtitle="Ajankohtaiset uutiset ja tiedotteet" />
  <div class="container mx-auto px-4 py-8">
    <NewsFeed server:defer>
      <NewsFeedSkeleton slot="fallback" />
    </NewsFeed>
  </div>
</Layout>
