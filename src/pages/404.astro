---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404">
  <main class="text-center px-6 mt-[10%]">
    <div
      class="max-w-md mx-auto bg-white p-8 rounded-xl shadow-md border border-gray-200"
    >
      <div class="text-6xl font-extrabold text-[#1a52e2] mb-2">404</div>
      <h1 class="text-2xl font-semibold mb-2">Sivua ei löytynyt</h1>
      <p class="mb-6 text-gray-600">Oho! Etsimääsi sivua ei löytynyt.</p>
      <a
        href="/"
        class="inline-block bg-[#1a52e2] text-white font-medium px-5 py-2.5 rounded-md hover:bg-[#163fbb] transition-colors"
      >
        Takaisin etusivulle
      </a>
    </div>
  </main>
</Layout>
